<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_24"
    android:background="@drawable/background_app">

    <!-- title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_would_you_like_to_scan_your_ingredients"
        android:gravity="center"
        android:textSize="@dimen/text_size_40"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_top_32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- card: Scan Barcode -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnBarcodeScan"
        android:layout_width="@dimen/width_0"
        android:layout_height="@dimen/height_120"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/corner_radius_16"
        app:cardElevation="@dimen/card_elevation_6"
        android:layout_marginTop="@dimen/margin_top_32"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_16"
            android:background="@drawable/ingredient_item_background">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/width_90"
                android:layout_height="@dimen/height_90"
                android:src="@drawable/barcode_scan" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_65"
                android:text="@string/scan_barcode"
                android:textSize="@dimen/text_size_25"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- card: Scan Without Barcode -->
<androidx.cardview.widget.CardView
android:id="@+id/btnScanWithoutBarcode"
android:layout_width="@dimen/width_0"
android:layout_height="@dimen/height_120"
android:clickable="true"
android:focusable="true"
app:cardCornerRadius="@dimen/corner_radius_16"
app:cardElevation="@dimen/card_elevation_6"
android:layout_marginTop="@dimen/margin_top_32"
app:layout_constraintTop_toBottomOf="@id/btnBarcodeScan"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/padding_16"
    android:background="@drawable/ingredient_item_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/width_90"
        android:layout_height="@dimen/height_90"
        android:src="@drawable/camera" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_65"
        android:text="@string/scan_without_barcode"
        android:textSize="@dimen/text_size_25"
        android:textStyle="bold" />
</LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- card: Select From Gallery -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnSelectFromGallery"
        android:layout_width="@dimen/width_0"
        android:layout_height="@dimen/height_120"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/corner_radius_16"
        app:cardElevation="@dimen/card_elevation_6"
        android:layout_marginTop="@dimen/margin_top_32"
        app:layout_constraintTop_toBottomOf="@id/btnScanWithoutBarcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_16"
            android:background="@drawable/ingredient_item_background">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/width_90"
                android:layout_height="@dimen/height_90"
                android:src="@drawable/gallery" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_65"
                android:text="@string/select_from_gallery_ingredients"
                android:textSize="@dimen/text_size_25"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
